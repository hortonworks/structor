<%
  @db = eval(@nodes).select {|node| node[:roles].include? 'hive-db'
                             }[0][:hostname] + "." + @domain;
-%>
#!/bin/bash
mysql -u root -pvagrant -h <%= @db %> << EOF
create database if not exists oozie;
grant all privileges on oozie.* to 'oozie'@'localhost' identified by 'vagrant';
grant all privileges on oozie.* to 'oozie'@'%' identified by 'vagrant';
EOF
