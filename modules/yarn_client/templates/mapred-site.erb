<% @yarnlist = eval(@nodes).select {|node| node[:roles].include? 'yarn'};
   @yarn = (@yarnlist.size == 0 ? "unknown" : @yarnlist[0][:hostname]) +
       "." + @domain;
   @slaves = eval(@nodes).select {|node| node[:roles].include? 'slave'}.size;
  -%>
<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>

<configuration xmlns:xi="http://www.w3.org/2001/XInclude">

  <property>
    <name>mapreduce.application.framework.path</name>
    <value>hdfs:/hdp/apps/${hdp.version}/mapreduce/mapreduce.tar.gz#mapreduce</value>
  </property>

  <property>
    <name>mapreduce.application.classpath</name>
    <value>mapreduce/hadoop/share/hadoop/mapreduce/*:mapreduce/hadoop/share/hadoop/mapreduce/lib/*:mapreduce/hadoop/share/hadoop/common/*:mapreduce/hadoop/share/hadoop/common/lib/*:mapreduce/hadoop/share/hadoop/yarn/*:mapreduce/hadoop/share/hadoop/yarn/lib/*:mapreduce/hadoop/share/hadoop/hdfs/*:mapreduce/hadoop/share/hadoop/hdfs/lib/*</value>
  </property>

  <property>
    <name>mapreduce.admin.user.env</name>
     <value>LD_LIBRARY_PATH=/usr/hdp/${hdp.version}/hadoop/lib/native:/usr/hdp/${hdp.version}/hadoop/lib/native/Linux-amd64-64</value>
  </property>

  <property>
    <name>yarn.app.mapreduce.am.admin.user.env</name>
    <value>LD_LIBRARY_PATH=/usr/hdp/${hdp.version}/hadoop/lib/native:/usr/hdp/${hdp.version}/hadoop/lib/native/Linux-amd64-64</value>
  </property>

  <property>
    <name>mapreduce.jobhistory.address</name>
    <value><%= @yarn %>:10020</value>
  </property>
    
  <property>
    <name>mapreduce.reduce.input.buffer.percent</name>
    <value>0.0</value>
  </property>
    
  <property>
    <name>mapreduce.output.fileoutputformat.compress</name>
    <value>false</value>
  </property>
    
  <property>
    <name>mapreduce.framework.name</name>
    <value>yarn</value>
  </property>
    
  <property>
    <name>mapreduce.map.speculative</name>
    <value>false</value>
  </property>
    
  <property>
    <name>mapreduce.reduce.shuffle.merge.percent</name>
    <value>0.66</value>
  </property>
    
  <property>
    <name>yarn.app.mapreduce.am.resource.mb</name>
    <value><%= @client_mem %></value>
  </property>
    
  <property>
    <name>mapreduce.map.java.opts</name>
    <value>-Xmx<%= @client_mem %>m</value>
  </property>
    
  <property>
    <name>mapreduce.cluster.administrators</name>
    <value> admin</value>
  </property>
    
  <property>
    <name>mapreduce.job.reduce.slowstart.completedmaps</name>
    <value>0.05</value>
  </property>
    
  <property>
    <name>mapreduce.output.fileoutputformat.compress.type</name>
    <value>BLOCK</value>
  </property>
    
  <property>
    <name>mapreduce.reduce.speculative</name>
    <value>false</value>
  </property>
    
  <property>
    <name>mapreduce.reduce.java.opts</name>
    <value>-Xmx<%= @client_mem %>m</value>
  </property>
    
  <property>
    <name>mapreduce.am.max-attempts</name>
    <value>2</value>
  </property>
    
  <property>
    <name>yarn.app.mapreduce.am.admin-command-opts</name>
    <value>-server -XX:NewRatio=8 -Djava.net.preferIPv4Stack=true -Dhadoop.metrics.log.level=WARN -Dhdp.version=${hdp.version}</value>
  </property>
    
  <property>
    <name>mapreduce.reduce.log.level</name>
    <value>INFO</value>
  </property>
    
  <property>
    <name>mapreduce.map.sort.spill.percent</name>
    <value>0.7</value>
  </property>
    
  <property>
    <name>mapreduce.task.io.sort.mb</name>
    <value><%= @client_mem.to_i / 3 %></value>
  </property>
    
  <property>
    <name>mapreduce.task.timeout</name>
    <value>300000</value>
  </property>
    
  <property>
    <name>mapreduce.map.memory.mb</name>
    <value><%= @client_mem %></value>
  </property>
    
  <property>
    <name>mapreduce.task.io.sort.factor</name>
    <value>10</value>
  </property>
    
  <property>
    <name>mapreduce.jobhistory.intermediate-done-dir</name>
    <value>/user/yarn/history/tmp</value>
  </property>
    
  <property>
    <name>mapreduce.reduce.memory.mb</name>
    <value><%= @client_mem %></value>
  </property>
    
  <property>
    <name>yarn.app.mapreduce.am.log.level</name>
    <value>INFO</value>
  </property>
    
  <property>
    <name>mapreduce.map.log.level</name>
    <value>INFO</value>
  </property>
    
  <property>
    <name>mapreduce.shuffle.port</name>
    <value>13562</value>
  </property>
    
  <property>
    <name>mapreduce.map.output.compress</name>
    <value>false</value>
  </property>
    
  <property>
    <name>yarn.app.mapreduce.am.staging-dir</name>
    <value>/user</value>
  </property>
    
  <property>
    <name>mapreduce.reduce.shuffle.parallelcopies</name>
    <value>2</value>
  </property>
    
  <property>
    <name>mapreduce.reduce.shuffle.input.buffer.percent</name>
    <value>0.7</value>
  </property>
    
  <property>
    <name>mapreduce.jobhistory.webapp.address</name>
    <value><%= @yarn %>:19888</value>
  </property>
    
  <property>
    <name>mapreduce.jobhistory.done-dir</name>
    <value>/user/yarn/history/done</value>
  </property>
    
  <property>
    <name>mapreduce.admin.reduce.child.java.opts</name>
    <value>-server -XX:NewRatio=8 -Djava.net.preferIPv4Stack=true -Dhadoop.metrics.log.level=WARN -Dhdp.version=${hdp.version}</value>
  </property>
    
  <property>
    <name>yarn.app.mapreduce.am.command-opts</name>
    <value>-Xmx<%= @client_mem.to_i / 2 %>m</value>
  </property>
    
  <property>
    <name>mapreduce.admin.map.child.java.opts</name>
    <value>-server -XX:NewRatio=8 -Djava.net.preferIPv4Stack=true -Dhadoop.metrics.log.level=WARN -Dhdp.version=${hdp.version}</value>
  </property>
    
  <property>
    <name>mapred.submit.replication</name>
    <value><%= [10, Math.sqrt(@slaves).to_i].min %></value>
  </property>

  <property>
    <name>mapreduce.job.acl-view-job</name>
    <value>*</value>
  </property>

<% if @security == "true" -%>
  <property>
    <name>mapreduce.jobhistory.principal</name>
    <value>jhs/_HOST@<%= @realm %></value>
  </property>
    
  <property>
    <name>mapreduce.jobhistory.keytab</name>
    <value><%= scope.lookupvar('hdfs_client::keytab_dir') %>/jhs.keytab</value>
  </property>
    
  <property>
    <name>mapreduce.jobhistory.webapp.spnego-principal</name>
    <value>HTTP/_HOST@<%= @realm %></value>
  </property>

  <property>
    <name>mapreduce.jobhistory.webapp.spnego-keytab-file</name>
    <value><%= scope.lookupvar('hdfs_client::keytab_dir') %>/http.keytab</value>
  </property>

  <property>
    <name>mapreduce.jobhistory.http.policy</name>
    <value>https_only</value>
  </property>
<% end -%>

</configuration>
